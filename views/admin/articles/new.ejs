<%- include('../../partials/head') %>

<%- include('../../partials/navbar') %>

<div class="container pt-4">

  <div class="card">
    <div class="card-header">
      <h3>Novo artigos</h3>
    </div>
    <div class="card-body">
      <form action="/articles/save" method="post">
        <input class="form-control mb-4" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo">
        <label for="">Categorias</label>
        <select name="category" id="" class="form-control mb-4">
          <% categories.map((category) => { %>
            <option value="<%= category.id %>"> <%= category.title %> </option>
          <% }) %>
        </select>
        <textarea class="form-control" name="body" id="article" placeholder="Escreva o seu artigo aqui"></textarea>
        
        <button class="btn btn-success mt-4">Cadastrar</button>
      </form>
    </div>
    
  </div>
</div>

<%- include('../../partials/footer') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>

  tinymce.init({
    selector: '#article',
    plugins: 'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste accordion emoticons',
    language: 'pt_BR'
  })

</script>