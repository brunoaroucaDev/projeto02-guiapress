<%- include('../../partials/head') %>

<body>
  <%- include('../../partials/homenavbar') %>

  <div class="container">
    <% result.articles.map(article => { %>
     <div class="card mb-5">
      <div class="card-header">
        <h3> <%= article.title %> </h3>
      </div>
      <div class="card-body">
        <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
      </div>
     </div>
    
    <% }) %>
     
    <div class="row pb-5" >
      <div class="col col-12">
        <% if(result.page > 1){ %>
          <a href="/articles/page/<%= result.page - 1 %>" class="float-left"> << Preve </a>
        <%} %>
       

        <% if(result.next){ %>
          <a href="/articles/page/<%= result.page + 1 %>" class="float-right"> Next >> </a>
        <%} %>
       
      </div>
    </div>
  </div>
</body>

<%- include('../../partials/footer') %>
